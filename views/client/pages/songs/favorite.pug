extends ../../layouts/default.pug
include ../../mixins/box-head.pug
block main
  .container.my-3
    .row
      .col-12
        +box-head(pageTitle)
    .row
      each song in songs
        .col-6.mb-3
          div(class="song-item")
            div(class="inner-image")
              a(href=`/songs/detail/${song.songId}`)
                img(src=song.avatar)
            div(class="inner-content")
              div(class="inner-title")
                a(href=`/songs/detail/${song.songId}`) #{song.title}
              div(class="inner-singer") <i class="fa-solid fa-microphone-lines"></i> #{song.singerFullName}
              div(class="inner-heart active" button-favorite=song.songId)
                <i class="fa-regular fa-heart"></i> Yêu thích
              div(class="inner-time") <i class="fa-regular fa-clock"></i> #{song.createdAt}